= simple_form_for(@category) do |f|
  = f.error_notification
  .actions
    = render 'layouts/form_buttons'
  .inputs
    .row
      %fieldset
        %legend Parameters
        .small-4.large-4.columns
          = f.association :topic
        .small-4.large-4.columns
          = f.input :name
        .small-4.large-4.columns
          = f.input :displayed_name
  .actions
    = render 'layouts/form_buttons'