- content_for :title, 'Categories'
%table
  %thead
    %tr
      %th Name
      %th Displayed Name
      %th
      %th
  %tbody
    - @categories.each do |category|
      %tr
        %td= link_to category.name, category
        %td= category.displayed_name
        %td= link_to '<i class="fi-pencil"></i>'.html_safe, edit_category_path(category), class: 'secondary-button'
        %td= link_to '<i class="fi-x"></i>'.html_safe, category, method: :delete, data: { confirm: 'Are you sure?' }, class: 'secondary-button'
= link_to '<i class="fi-page-add"></i> New Category'.html_safe, new_category_path, class: 'main-button'
