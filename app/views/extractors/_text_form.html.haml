= simple_form_for [@extractor.partition, @extractor] do |f|
  = f.error_notification
  .actions
    = render 'layouts/form_buttons'
  .inputs
    %fieldset
      %legend Parameters
      = f.input :partition_id, as: :hidden
      = f.input :type, as: :hidden
      .row
        .small-12.large-12.columns
          = f.input :name
        .small-6.large-6.columns
          = f.input :key
        .small-6.large-6.columns
          = f.input :element
      .row
        .small-6.large-6.columns
          = f.input :pattern
        .small-6.large-6.columns
          = f.input :replacement
  .actions
    = render 'layouts/form_buttons'