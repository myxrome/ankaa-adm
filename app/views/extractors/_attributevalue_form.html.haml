= simple_form_for [@extractor.partition, @extractor] do |f|
  = f.error_notification
  .actions
    = render 'layouts/form_buttons'
  .inputs
    %fieldset
      %legend Parameters
      = f.input :partition_id, as: :hidden
      = f.input :type, as: :hidden
      .row
        .small-1.large-1.columns
          %label Reqiured
          = f.input :required, wrapper_html: { class: 'switch' }
        .small-11.large-11.columns
          = f.input :name
      .row
        .small-4.large-4.columns
          = f.input :key
        .small-4.large-4.columns
          = f.input :element
        .small-4.large-4.columns
          = f.input :attr, label: 'Attribute'
      .row
        .small-6.large-6.columns
          = f.input :pattern
        .small-6.large-6.columns
          = f.input :replacement
  .actions
    = render 'layouts/form_buttons'