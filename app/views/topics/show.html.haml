%p#notice= notice
- content_for :title, "Application - #{@topic.name}"
.row
  .small-4.large-4.columns
    %p Categories: #{@topic.categories.map { |c| link_to c.name, c }.join(', ').html_safe}
    %p Key: #{@topic.key}
  .small-8.large-8.columns
    %p Values:
    = render 'values/table', values: @topic.values unless @topic.values.empty?
= link_to '<i class="fi-pencil"></i> Edit'.html_safe, edit_topic_path(@topic), class: 'main-button'
