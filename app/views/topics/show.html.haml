%p#notice= notice
- content_for :title, "Topic - #{@topic.name}"
.row
  .small-12.large-12.columns
    %fieldset
      %legend Parameters
      Key: #{@topic.key}
.row
  .small-4.large-4.columns
    %fieldset
      %legend Categories
      = render 'categories/table', categories: @topic.categories
      = link_to '<i class="fi-page-add"></i> New Category'.html_safe, new_topic_category_path(@topic), class: 'tiny button'
  .small-8.large-8.columns
    %fieldset
      %legend Values
      = render 'values/table', values: @topic.values #unless @topic.values.empty?
.row
  .small-12.large-12.columns
    = link_to '<i class="fi-pencil"></i> Edit'.html_safe, edit_topic_path(@topic), class: 'tiny button'
