- content_for :title, "#{mapping_source_name(@mapping)} - Mapping".html_safe
.row
  .small-12.large-12.columns
    %fieldset
      %legend Parameters
      %table
        %tbody
          %tr
            %td{width: '150px'} Scope:
            %td= @mapping.scope
.row
  .small-12.large-12.columns
    = link_to '<i class="fi-pencil"></i> Edit'.html_safe, edit_mapping_path(@mapping), class: 'right tiny button'
.row
  .small-12.large-12.columns
    %fieldset
      %legend Transformers
      = render 'transformers/table', transformers: @mapping.transformers
      %button{data: {dropdown: 'transformer', options: 'align:top'}, class: 'right tiny button'}
        = '<i class="fi-page-add"></i> New Transformer &raquo;'.html_safe
      %ul.f-dropdown#transformer{data: {'dropdown-content'.to_sym => ''}}
        - Transformer.types.each do |type|
          %li= link_to type, new_mapping_transformer_path(type: type, mapping_id: @mapping)