- content_for :title, 'Partners'
%table
  %thead
    %tr
      %th Name
      %th URL
      %th Logo
      %th
      %th
  %tbody
    - @partners.each do |partner|
      %tr
        %td= link_to partner.name, partner
        %td= partner.url
        %td
          %a.th{href: '#'}
            %img{src: "#{partner.logo.url}"}
        %td= link_to '<i class="fi-pencil"></i>'.html_safe, edit_partner_path(partner), class: 'secondary-button'
        %td= link_to '<i class="fi-x"></i>'.html_safe, partner, method: :delete, data: { confirm: 'Are you sure?' }, class: 'secondary-button'
= link_to '<i class="fi-page-add"></i> New Partner'.html_safe, new_partner_path, class: 'main-button'
