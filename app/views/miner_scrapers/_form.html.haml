= simple_form_for [@miner_scraper.miner, @miner_scraper] do |f|
  = f.error_notification
  .actions
    = render 'layouts/form_buttons'
  .inputs
    %fieldset
      %legend Parameters
      .row
        .small-10.large-10.columns
          = f.association :scraper
        .small-2.large-2.columns
          = f.input :limit
      .row
        .small-6.large-6.columns
          = f.input :url_prefix, label: 'URL Prefix'
        .small-1.large-1.text-center.columns
          %h1 #
        .small-5.large-5.columns
          = f.input :url_postfix, label: 'URL Postfix'
  .actions
    = render 'layouts/form_buttons'