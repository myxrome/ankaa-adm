      %table
        %tbody
          %tr
            %td{width: '150px'} Key:
            %td= @transformer.key
          %tr
            %td{width: '150px'} Selector:
            %td= @transformer.selector
          %tr
            %td{width: '150px'} Prefix:
            %td= @transformer.prefix
          %tr
            %td{width: '150px'} Postfix:
            %td= @transformer.postfix
