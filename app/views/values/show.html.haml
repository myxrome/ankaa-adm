.row
  .small-1.large-1.columns
    %a.th{href: value_path(@value)}
      %img{src: "#{@value.thumb}"}
  .small-11.large-11.columns
    %h1= "Value - #{@value.name}"
%fieldset
  %legend Parameters
  .row
    .small-3.large-3.columns
      %p Category: #{link_to @value.category.name, @value.category}
    .small-3.large-3.columns
      %p End date: #{@value.end_date}
    .small-3.large-3.columns
      %p Active: #{@value.active}
  .row
    .small-12.large-12.columns
      %p Url: #{@value.url}
  .row
    .small-4.large-4.columns
      %p Old price: #{@value.old_price}
    .small-4.large-4.columns
      %p Discount: #{@value.discount}
    .small-4.large-4.columns
      %p New price: #{@value.new_price}
.row
  .small-12.large-12.columns
    = link_to '<i class="fi-pencil"></i> Edit'.html_safe, edit_value_path(@value), class: 'right tiny button'
.row
  .small-5.large-5.columns
    %fieldset
      %legend Promos
      %ul{data: ({orbit: ''} unless @value.promos.empty?)}
        - @value.promos.each do |promo|
          %li
            %img{src: "#{promo.image.url}"}
  .small-7.large-7.columns
    %fieldset
      %legend Descriptions
      - @value.descriptions.each do |description|
        .row
          .small-4.large-4.columns
            %p{class: [('red' if description.red), ('bold' if description.bold)].compact.join(' ')} #{description.caption}
          .small-8.large-8.columns
            %p{class: [('red' if description.red), ('bold' if description.bold)].compact.join(' ')} #{description.text}
