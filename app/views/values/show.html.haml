.row
  .small-1.large-1.columns
    %a.th{href: value_path(@value)}
      %img{src: "#{@value.thumb}"}
  .small-11.large-11.columns
    %h1= "Value - #{@value.name}"
.row
  .small-12.large-12.columns
    %fieldset
      %legend Parameters
      %table
        %tbody
          %tr
            %td{width: '150px'} Category:
            %td= link_to @value.category.name, @value.category
          %tr
            %td{width: '150px'} Old price:
            %td= @value.old_price
          %tr
            %td{width: '150px'} Discount:
            %td= @value.discount
          %tr
            %td{width: '150px'} New price:
            %td= @value.new_price
          %tr
            %td{width: '150px'} Url:
            %td= @value.url
.row
  .small-12.large-12.columns
    = link_to '<i class="fi-pencil"></i> Edit'.html_safe, edit_value_path(@value), class: 'right tiny button'
.row
  .small-5.large-5.columns
    %fieldset
      %legend Promos
      %ul{data: ({orbit: ''} unless @value.promos.empty?)}
        - @value.promos.each do |promo|
          %li
            %img{src: "#{promo.image.url}"}
  .small-7.large-7.columns
    %fieldset
      %legend Descriptions
      %table
        %tbody
          - @value.descriptions.each do |description|
            %tr
              -unless description.caption.empty?
                %td{class: [('red' if description.red), ('bold' if description.bold)].compact.join(' ')} #{description.caption}
              %td{class: [('red' if description.red), ('bold' if description.bold)].compact.join(' '), colspan: (2 if description.caption.empty?)} #{description.text}
