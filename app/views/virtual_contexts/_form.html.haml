= simple_form_for(@virtual_context) do |f|
  = f.error_notification
  .actions
    = render 'layouts/form_buttons'
  .inputs
    %fieldset
      %legend #{f.object.virtual_context_type.name} Parameters
      .row
        = f.association :virtual_context_type, as: :hidden
        .small-6.large-6.columns
          = f.input :name
        .small-6.large-6.columns
          = f.input :description
  .actions
    = render 'layouts/form_buttons'
