= simple_form_for(@scraper) do |f|
  = f.error_notification
  .actions
    = render 'layouts/form_buttons'
  .inputs
    %fieldset
      %legend Parameters
      .row
        .small-1.large-1.columns
          %label Active
          = f.input :active, wrapper_html: { class: 'switch' }
        .small-11.large-11.columns
          = f.input :name
      .row
        .small-4.large-4.columns
          = f.input :scope
        .small-4.large-4.columns
          = f.input :selector
        .small-4.large-4.columns
          = f.input :condition
      .row
        .small-6.large-6.columns
          = f.input :element
        .small-6.large-6.columns
          = f.input :attr, label: 'Attribute'
      .row
        .small-6.large-6.columns
          = f.input :source_pattern, label: 'Source Pattern'
        .small-6.large-6.columns
          = f.input :source_replacement, label: 'Source Replacement'
      .row
        .small-6.large-6.columns
          = f.input :url_prefix, label: 'URL Prefix'
        .small-6.large-6.columns
          = f.input :url_postfix, label: 'URL Postfix'
  .actions
    = render 'layouts/form_buttons'