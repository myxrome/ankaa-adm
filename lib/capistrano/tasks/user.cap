namespace :user do

  desc 'Add new user to system'
  task :add do
    ask(:login, '')
    ask(:password, '')
    on roles(:app) do
      within "#{current_path}" do
        with rails_env: fetch(:rails_env) do
          execute :rake, "user:add['#{fetch(:login)}','#{fetch(:password)}']"
        end
      end
    end
  end

end